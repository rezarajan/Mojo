<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/checkout_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_shopping_cart_48px" />

    <android.support.v7.widget.CardView
        android:id="@+id/location_indicator_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_below="@+id/checkout_icon"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/colorPrimaryLight">

        <TextView
            android:id="@+id/location_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:text="Dang! No venue found"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/mojoLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="MOJO"
        android:textColor="@color/colorSecondary"
        android:textSize="36sp" />



