<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <fragment
        android:id="@+id/fragment_mainInfo"
        android:name="bluefirelabs.mojo.fragments.mainInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/restaurantcards" />

    <fragment
        android:id="@+id/fragment_restaurantCards"
        android:name="bluefirelabs.mojo.fragments.restaurantCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/restaurantcards" />

</LinearLayout>